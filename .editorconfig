root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
quote_type = single
end_of_line = lf
max_line_length = 150

[*.yml]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[{Makefile,**.mk}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab
